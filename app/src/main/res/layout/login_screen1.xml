<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

   >




    <FrameLayout
        android:id="@+id/bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:scaleType="centerCrop"
            />
    </FrameLayout>



















    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity = "bottom"



        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"

                android:src="@drawable/gallerybtn"
                android:layout_gravity="center"

                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="#7deb280a"
            android:orientation="vertical"

            >




            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DON'T WAIT ORDER OR SALIVATE "
                android:gravity="center"
                android:textColor="#FFFFFF"


                />

        </LinearLayout>
        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true" />


        <Button

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CREATE AN ACCOUNT"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:textColorHint="#000000"
            android:textColor="@color/textwhite"
            android:maxLength="12"
            android:background="#9ee4a914"
            android:layout_centerHorizontal="true"
             android:textAlignment="center"
            android:padding="16dp"
            android:gravity="left"

            android:id="@+id/account"


            />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true" />

        <Button

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LOGIN"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:textColorHint="#000000"
            android:textColor="@color/textwhite"
            android:maxLength="12"
            android:background="#9ee4a914"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:padding="16dp"
            android:gravity="left"
            android:layout_below="@+id/account"
            android:id="@+id/login"
            />
        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true" />


        <Button

            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CONTINUE AS GUEST"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:textColorHint="#000000"
            android:textColor="@color/textwhite"
            android:maxLength="12"
            android:background="#7deb550a"
            android:padding="16dp"
            android:gravity="left"

            android:layout_below="@+id/login"

            />
        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true" />



    </LinearLayout>







</RelativeLayout>
